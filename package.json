{
  "name": "hyperdeck-controller-desktop",
  "version": "1.0.0",
  "description": "HyperDeck Controller Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win portable",
    "build-mac": "electron-builder --mac dmg",
    "build-linux": "electron-builder --linux AppImage"
  },
  "build": {
    "appId": "com.hyperdeckcontroller.app",
    "productName": "HyperDeck Controller",
    "linux": {
      "target": ["AppImage"],
      "category": "AudioVideo"
    },
    "win": {
      "target": ["portable"]
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.video"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "ws": "^8.14.0"
  }
}
